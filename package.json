{
  "name": "tourofheroes",
  "version": "0.0.0",
  "description": "Angular 2 Tour of heroes tutorial",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server --inline --progress --port 4000",
    "ngc": "node_modules/.bin/ngc -p tsconfig.aot.json",
    "webpack": "webpack --config config/webpack.prod.js --progress --profile --bail",
    "pretest": "rimraf coverage/",
    "test": "karma start",
    "posttest": "npm run coverage",
    "coverage": "npm run coverage:remap && npm run coverage:report",
    "coverage:remap": "remap-istanbul -i coverage/unit/phantomjs/coverage.json -o coverage/unit/phantomjs/coverage.json -t json -e node_modules,config/karma-test-shim.ts",
    "coverage:report": "istanbul report",
    "build": "rimraf dist && npm run webpack",
    "build:aot": "npm run ngc && npm run webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeanpaulattard/tourofheroes.git"
  },
  "author": "JeanPaul Attard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeanpaulattard/tourofheroes/issues"
  },
  "homepage": "https://github.com/jeanpaulattard/tourofheroes#readme",
  "dependencies": {
    "@angular/common": "2.1.2",
    "@angular/compiler": "2.1.2",
    "@angular/compiler-cli": "2.1.2",
    "@angular/core": "2.1.2",
    "@angular/forms": "2.1.2",
    "@angular/http": "2.1.2",
    "@angular/platform-browser": "2.1.2",
    "@angular/platform-browser-dynamic": "2.1.2",
    "@angular/platform-server": "2.1.2",
    "@angular/router": "3.1.2",
    "angular2-in-memory-web-api": "0.0.20",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.37",
    "@types/node": "^6.0.45",
    "angular2-router-loader": "^0.3.3",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^2.2.4",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-htmlfile-reporter": "^0.3.4",
    "karma-jasmine": "^0.3.8",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-sourcemap-writer": "^0.1.2",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.7",
    "raw-loader": "^0.5.1",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "typescript": "2.0.3",
    "typings": "^1.3.2",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-server": "2.1.0-beta.10",
    "webpack-merge": "0.15.0"
  }
